<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".interface.info.InfoDetailActivity"
    android:background="#FFFFFF"
    tools:showIn="@layout/info_activity_detail">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:background="#857AB853"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/InfoPhotoDetail"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_marginHorizontal="72dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintDimensionRatio="H, 1:1"
                tools:srcCompat="@drawable/kiki" />

            <TextView
                android:id="@+id/InfoNamaDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:maxLines="2"
                android:text="Primandika Hakiki"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/InfoDeskripsiDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:background="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:padding="6dp"
                android:text="Saya adalah mahasiswa jurusan Sistem Informasi di Fakultas Ilmu Komputer UPN Veteran Jawa Timur. Umur saya 20 tahun dan saya adalah seorang Gadget Enthusiast yang juga hobi bermain futsal"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:text='Link Github :'
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/github"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginBottom="12dp"
                android:autoLink="web"
                android:text='https://github.com/primandikakiki'
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColorLink="#304FFE"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>