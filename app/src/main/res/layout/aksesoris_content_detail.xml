<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".interface.aksesoris.AksesorisDetailActivity"
    android:background="#FFFFFF"
    tools:showIn="@layout/aksesoris_activity_detail">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:background="#7EFFFFFF"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/PhotoAksesorisDetail"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="72dp"
                android:layout_marginTop="32dp"
                app:layout_constraintDimensionRatio="H, 1:1"
                tools:srcCompat="@drawable/typec" />

            <TextView
                android:id="@+id/NamaAksesorisDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:text="Kabel Type-C"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/HargaAksesorisDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:text="Rp 60.000"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#7E000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/SpesifikasiAksesorisDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:background="#0FD50000"
                android:fontFamily="sans-serif-light"
                android:padding="6dp"
                android:text="Spesifikasi"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="16dp" />


            <Button
                android:id="@+id/buttonWeb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="12dp"
                android:background="#9A00C853"
                android:text="BELI"
                android:textAlignment="center"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>